@model CodeV4.VM.VmSale
@{
    ViewBag.Title = "Single";
    var listSaleMaster = ViewData["List"] as List<CodeV4.Models.SaleMaster>;
    var indexItem = 0;
}
<h2>SPA</h2>
@Html.Partial("PartialView")
<a class="btn btn-outline-primary" href="/Sales/Single">Add New Information</a>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Date</th>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Product Type</th>
            <th>Photo</th>
            <th>EditAction</th>
            <th>DeleteAction</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in listSaleMaster)
        {
            <tr>
                <td>@item.CreateDate</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerAddress</td>
                <td>@item.Gender</td>
                <td>@item.ProductType</td>
                <td><img src="@item.Photo" width="120" height="150"></td>
                <td><a href="/Sales/Single?id=@item.SaleId" class="btn btn-primary">Edit</a></td>
                <td><a href="/Sales/SingleDelete?id=@item.SaleId" id ="btnDelete" onclick="return confirm('Are you sure to delete?')" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<script>
    var indexItem = @indexItem;
    function addItem() {
        indexItem += 1;
        var TRs = '<tr id="tr_' + indexItem + '"><td><input type="text" id="ProductName_1" name="ProductName" value="" /></td>'
            + '<td><input type="text" id="UnitPrice_' + indexItem + '" name="UnitPrice" value="" style="text-align:right" onkeydown="calculatePrice(' + indexItem + ');" /></td>'
            + '<td><input type="text" id="Qty_' + indexItem + '" name="Qty" value="" style="text-align:right" onkeydown="calculatePrice(' + indexItem + ');" /></td>'
            + '<td><input type="text" id="Price_' + indexItem + '" name="Price" value="" style="text-align:right" /></td>'
            + '<td><a href="javascript:void(0)" onclick="removeItem(' + indexItem + ')">Remove</a></td>'
            + '</tr>';
        document.getElementById('tSD').innerHTML += TRs;
    }
    function removeItem(id) {
        document.getElementById('tr_' + id).remove();
    }
</script>

